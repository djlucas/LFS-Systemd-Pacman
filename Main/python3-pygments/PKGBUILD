# Maintainer: DJ Lucas <dj@linuxfromscratch.org>

pkgname=python3-pygments
pkgnamed=Pygments
pkgver=2.6.1
pkgrel=1
pkgdesc="Pygments is a general syntax highlighter written in Python, for more than 300 languages."
arch=('any')
license=('PSF')
url="https://pypi.org/project/${pkgname}/"
groups=('core')
depends=('python3')
source=("https://files.pythonhosted.org/packages/source/P/${pkgnamed}/${pkgnamed}-${pkgver}.tar.gz")

package() {
  cd ${pkgnamed}-${pkgver}
  python3 setup.py install --root="$pkgdir" --optimize=1
}
sha256sums=('647344a061c249a3b74e230c739f434d7ea4d8b1d5f3721bc0f3558049b38f44')
