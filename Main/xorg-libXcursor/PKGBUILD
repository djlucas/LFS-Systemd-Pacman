# Maintainer: DJ Lucas <dj@linuxfromscratch.org>

_pkgname=libXcursor
pkgname=xorg-libXcursor
pkgver=1.2.0
pkgrel=1
pkgdesc="libXcursor contains the X.org cursor library."
arch=('x86_64')
url="https://xorg.freedesktop.org/"
license=('custom')
groups=('xorg')
depends=('glibc'
         'libxcb'
         'xorg-libX11'
         'xorg-libXau'
         'xorg-libXdmcp'
         'xorg-libXfixes'
         'xorg-libXrender')
makedepends=('bash'
             'binutils'
             'coreutils'
             'gawk'
             'gcc'
             'gettext'
             'make'
             'xorg-util-macros'
             'xorg-xorgproto')
optdepends=('fop'
            'libxslt'
            'links'
            'lynx'
            'w3m'
            'xmlto')
source=("${url}/releases/individual/lib/${_pkgname}-${pkgver}.tar.bz2")

build(){
  cd "${_pkgname}-${pkgver}"
  ./configure --prefix=/usr        \
              --sysconfdir=/etc    \
              --localstatedir=/var \
              --disable-static     \
              --docdir="/usr/share/doc/${_pkgname}-${pkgver}"
  make
}

package(){
  cd "${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

sha256sums=('3ad3e9f8251094af6fe8cb4afcf63e28df504d46bfa5a5529db74a505d628782')
