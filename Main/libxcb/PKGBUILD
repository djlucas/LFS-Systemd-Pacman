# Maintainer: DJ Lucas <dj@linuxfromscratch.org>

pkgname=libxcb
pkgver=1.14
pkgrel=1
pkgdesc="The libxcb package provides an interface to the X Window System protocol, which replaces the current Xlib interface."
arch=('x86_64')
url="https://xcb.freedesktop.org/"
_url="https://xorg.freedesktop.org"
license=('custom')
groups=('xorg')
depends=('glibc'
         'xorg-libXau'
         'xcb-proto'
         $(pacman -Qs xorg-libXdmcp > /dev/null 2>&1 && echo 'xorg-libXdmcp'))
makedepends=('bash'
             'binutils'
             'coreutils'
             'gcc'
             'make'
             'python3')
optdepends=('doxygen'
            'libxslt'
            $(pacman -Qs xorg-libxdmcp > /dev/null 2>&1 || echo 'xorg-libXdmcp'))
source=("${_url}/releases/individual/lib/${pkgname}-${pkgver}.tar.xz")
_confargs=""

build(){
  cd "${pkgname}-${pkgver}"
  if ! $(pacman -Qs doxygen > /dev/null 2>&1); then
    _confarg="${_confargs} --without-doxygen"
  fi
  CFLAGS+=-Wno-error=format-extra-args \
  ./configure --prefix=/usr        \
              --sysconfdir=/etc    \
              --localstatedir=/var \
              --disable-static     \
              ${_confargs}         \
              --with-doc-dir="/usr/share/doc/${pkgname}-${pkgver}"
  make
}

# Check requires an Xorg environment
#check(){
#  cd "${pkgname}-${pkgver}"
#  make check
#}

package(){
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

sha256sums=('a55ed6db98d43469801262d81dc2572ed124edc3db31059d4e9916eb9f844c34')
