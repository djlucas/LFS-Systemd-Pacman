# Maintainer: DJ Lucas <dj@linuxfromscratch.org>

pkgname=man-pages
pkgver=5.08
pkgrel=1
pkgdesc="The Man-pages package contains over 2,200 man pages." 
arch=('x86_64')
url="https://www.kernel.org/doc/man-pages/"
license=('GPL3')
groups=('core')
depends=('man-db')
makedepends=('bash'
             'coreutils'
             'make')
source=("https://www.kernel.org/pub/linux/docs/${pkgname}/${pkgname}-${pkgver}.tar.xz")

package(){
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

sha256sums=('cea7cd31f8080ed8ec6725419e58bbe04ab0dd4fa0071526bd7cf0cd8d1bf7f7')
