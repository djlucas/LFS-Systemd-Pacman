# Maintainer: DJ Lucas <dj@linuxfromscratch.org>

_pkgname=libdmx
pkgname=xorg-libdmx
pkgver=1.1.4
pkgrel=1
pkgdesc="libdmx contains the X.org distributed multihead extension library."
arch=('x86_64')
url="https://xorg.freedesktop.org/"
license=('custom')
groups=('xorg')
depends=('glibc'
         'libxcb'
         'xorg-libX11'
         'xorg-libXau'
         'xorg-libXdmcp'
         'xorg-libXext')
makedepends=('bash'
             'binutils'
             'coreutils'
             'gawk'
             'gcc'
             'gettext'
             'make'
             'xorg-libXxf86vm'
             'xorg-util-macros'
             'xorg-xorgproto')
optdepends=('fop'
            'libxslt'
            'links'
            'lynx'
            'w3m'
            'xmlto')
source=("${url}/releases/individual/lib/${_pkgname}-${pkgver}.tar.bz2")

build(){
  cd "${_pkgname}-${pkgver}"
  ./configure --prefix=/usr        \
              --sysconfdir=/etc    \
              --localstatedir=/var \
              --disable-static     \
              --docdir="/usr/share/doc/${_pkgname}-${pkgver}"
  make
}

package(){
  cd "${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

sha256sums=('253f90005d134fa7a209fbcbc5a3024335367c930adf0f3203e754cf32747243')
