# Maintainer: DJ Lucas <dj@linuxfromscratch.org>

_pkgname=libFS
pkgname=xorg-libFS
pkgver=1.0.8
pkgrel=1
pkgdesc="libFS contains the X.org Font Service library."
arch=('x86_64')
url="https://xorg.freedesktop.org/"
license=('custom')
groups=('xorg')
depends=('glibc')
makedepends=('bash'
             'binutils'
             'coreutils'
             'gcc'
             'make'
             'xorg-util-macros'
             'xorg-xorgproto'
             'xorg-xtrans')
optdepends=('fop'
            'libxslt'
            'links'
            'lynx'
            'w3m'
            'xmlto')
source=("${url}/releases/individual/lib/${_pkgname}-${pkgver}.tar.bz2")

build(){
  cd "${_pkgname}-${pkgver}"
  ./configure --prefix=/usr        \
              --sysconfdir=/etc    \
              --localstatedir=/var \
              --disable-static
  make
}

package(){
  cd "${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

sha256sums=('c8e13727149b2ddfe40912027459b2522042e3844c5cd228c3300fe5eef6bd0f')
