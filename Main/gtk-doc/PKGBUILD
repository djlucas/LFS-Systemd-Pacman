# Maintainer: DJ Lucas <dj_AT_linuxfromscratch_DOT_org>

pkgname=gtk-doc
pkgver=1.32
pkgrel=1
pkgdesc="The GTK-Doc package contains a code documenter."
arch=('x86_64')
url="https://gitlab.gnome.org/GNOME/gtk-doc/"
license=('GPL3')
groups=('core')
depends=('docbook-xml'
         'docbook-xsl'
         'glibc'
         'itstool'
         'libxslt')
makedepends=('bash'
             'binutils'
             'coreutils'
             'gcc'
             'grep'
             'make'
             'sed')
optdepends=('python3-pygments')
#checkdepends=('fop'
#              'glib'
#              'python3-lxml'
#              'which')
source=("http://ftp.gnome.org/pub/gnome/sources/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.xz")

build(){
  cd "${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

# Requires previous version installed
#check(){
#  cd "${pkgname}-${pkgver}"
#  make check
#}

package(){
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

sha256sums=('de0ef034fb17cb21ab0c635ec730d19746bce52984a6706e7bbec6fb5e0b907c')
