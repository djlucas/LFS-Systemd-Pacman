# Maintainer: DJ Lucas <dj_AT_linuxfromscratch_DOT_org>

pkgname=libpipeline
pkgver=1.5.3
pkgrel=1
pkgdesc="The Libpipeline package contains a library for manipulating pipelines of subprocesses in a flexible and convenient way." 
arch=('x86_64')
url="http://libpipeline.nongnu.org/"
license=('GPL3')
groups=('core')
depends=('gcc'
         'glibc')
makedepends=('bash'
             'binutils'
             'coreutils'
             'diffutils'
             'gawk'
             'grep'
             'make'
             'sed'
             'texinfo')
source=("http://download.savannah.gnu.org/releases/${pkgname}/${pkgname}-${pkgver}.tar.gz")

build(){
  cd "${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

check(){
  cd "${pkgname}-${pkgver}"
  make check
}

package(){
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

sha256sums=('5dbf08faf50fad853754293e57fd4e6c69bb8e486f176596d682c67e02a0adb0')
