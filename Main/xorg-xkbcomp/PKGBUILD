# Maintainer: DJ Lucas <dj@linuxfromscratch.org>

_pkgname=xkbcomp
pkgname=xorg-xkbcomp
pkgver=1.4.3
pkgrel=1
pkgdesc="xkbcomp compiles an XKB keyboard description."
arch=('x86_64')
url="https://xorg.freedesktop.org"
license=('custom')
groups=('xorg')
depends=('glibc'
         'libxcb'
         'xorg-libX11'
         'xorg-libXau'
         'xorg-libXdmcp'
         'xorg-libXext'
         'xorg-libxkbfile')
makedepends=('bash'
             'binutils'
             'coreutils'
             'gawk'
             'gcc'
             'gettext'
             'make'
             'xorg-util-macros'
             'xorg-xorgproto')
source=("${url}/releases/individual/app/${_pkgname}-${pkgver}.tar.bz2")

build(){
  cd "${_pkgname}-${pkgver}"
  ./configure --prefix=/usr        \
              --sysconfdir=/etc    \
              --localstatedir=/var
  make
}

package(){
  cd "${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

sha256sums=('06242c169fc11caf601cac46d781d467748c6a330e15b36dce46520b8ac8d435')
