# Maintainer: DJ Lucas <dj@linuxfromscratch.org>

_pkgname=xrefresh
pkgname=xorg-xrefresh
pkgver=1.0.6
pkgrel=1
pkgdesc="xrefresh refreshes all or part of an X screen."
arch=('x86_64')
url="https://xorg.freedesktop.org"
license=('custom')
groups=('xorg')
depends=('glibc'
         'libxcb'
         'xorg-libX11'
         'xorg-libXau'
         'xorg-libXdmcp')
makedepends=('bash'
             'binutils'
             'coreutils'
             'gawk'
             'gcc'
             'gettext'
             'grep'
             'make'
             'sed'
             'xorg-util-macros'
             'xorg-xorgproto')
source=("${url}/releases/individual/app/${_pkgname}-${pkgver}.tar.bz2")

build(){
  cd "${_pkgname}-${pkgver}"
  ./configure --prefix=/usr        \
              --sysconfdir=/etc    \
              --localstatedir=/var
  make
}

package(){
  cd "${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

sha256sums=('287dfb9bb7e8d780d07e672e3252150850869cb550958ed5f8401f0835cd6353')
