# Maintainer: DJ Lucas <dj@linuxfromscratch.org>

pkgname=python3-setuptools
pkgnamed=setuptools
pkgver=50.3.0
pkgrel=1
pkgdesc="Easily download, build, install, upgrade, and uninstall Python packages"
arch=('any')
license=('PSF')
url="https://pypi.org/project/setuptools/"
groups=('core')
depends=('python3')
source=("${pkgnamed}-${pkgver}.tar.gz::https://github.com/pypa/setuptools/archive/v${pkgver}.tar.gz")

build() {
  cd ${pkgnamed}-${pkgver}
  python3 bootstrap.py
  python3 setup.py build
}

package() {
  cd ${pkgnamed}-${pkgver}
  python3 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 --skip-build
}
sha256sums=('ff35597b0df84df22f139ce5f94ba0d1536876829a0ec777eba906496ccb6167')
